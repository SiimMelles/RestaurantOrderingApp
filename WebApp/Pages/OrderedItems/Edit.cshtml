@page
@model WebApp.Pages.OrderedItems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrderedItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderedItem.OrderedItemId" />
            <div class="form-group">
                <label asp-for="OrderedItem.Quantity" class="control-label"></label>
                <input asp-for="OrderedItem.Quantity" class="form-control" />
                <span asp-validation-for="OrderedItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderedItem.SpecialInstructions" class="control-label"></label>
                <input asp-for="OrderedItem.SpecialInstructions" class="form-control" />
                <span asp-validation-for="OrderedItem.SpecialInstructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderedItem.FoodItemId" class="control-label"></label>
                <select asp-for="OrderedItem.FoodItemId" class="form-control" asp-items="ViewBag.FoodItemId"></select>
                <span asp-validation-for="OrderedItem.FoodItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderedItem.PersonId" class="control-label"></label>
                <select asp-for="OrderedItem.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="OrderedItem.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

