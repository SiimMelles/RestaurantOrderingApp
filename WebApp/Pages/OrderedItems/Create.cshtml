@page
@model WebApp.Pages.OrderedItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrderedItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderedItem.Quantity" class="control-label"></label>
                <input asp-for="OrderedItem.Quantity" class="form-control" />
                <span asp-validation-for="OrderedItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderedItem.SpecialInstructions" class="control-label"></label>
                <input asp-for="OrderedItem.SpecialInstructions" class="form-control" />
                <span asp-validation-for="OrderedItem.SpecialInstructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderedItem.FoodItem.Name" class="control-label"></label>
                <select asp-for="OrderedItem.FoodItemId" class ="form-control" asp-items="Model.FoodItemSelectList"></select>
            </div>
            <input asp-for="OrderedItem.PersonId" value="@Model.PersonId" class="form-control" type="hidden"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Persons/Details" asp-route-id="@Model.PersonId">Back to Order</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
