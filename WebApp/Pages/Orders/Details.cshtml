@page
@model WebApp.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderTotal)
        </dd>
        <ul>
            @{
                if (Model.Order.Persons.Count >= 0)
                {
                    foreach (var person in Model.Order.Persons)
                    {
                        <li>@person.Name - 
                            <a asp-page="../OrderedItems/CreateFromList" asp-route-id="@person.PersonId">
                                Add meal to order - 
                            </a>
                            <a asp-page="../Persons/Details" asp-route-id="@person.PersonId" asp-route-OrderId="@Model.Order.OrderId">
                                View persons order
                            </a>
                        </li>
                    }    
                }
            }
        </ul>
    </dl>
</div>
<div>
    <a asp-page="./../Persons/Create" asp-route-id="@Model.Order.OrderId">Add people to order</a> | 
    <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
